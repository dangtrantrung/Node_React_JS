<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User's Information</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

</head>

<body>
    <div class="container">
        <div class="row">
            <!-- <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control">
                </div>
            </div> -->
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3">
                        <h2>Edit User's Information</h2>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputFirstName">First Name</label>
                        <input type="text" class="form-control" name="FirstName" placeholder="First Name" value="<%= user.firstName%>">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputLastName">Last Name</label>
                        <input type="text" class="form-control" name="LastName" placeholder="Last Name" value="<%= user.lastName%>">
                    </div>
                    <div class="form-group col-12">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" name="Address" placeholder="Address" value="<%= user.address%>">
                    </div>
                </div>
                <input name="id" type="text" hidden value="<%= user.id%>" /><button type=" submit " class="btn btn-primary ">Update</button>
            </form>
        </div>

    </div>
</body>



<!-- jQuery library -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js "></script>

<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js "></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js "></script>

</html>